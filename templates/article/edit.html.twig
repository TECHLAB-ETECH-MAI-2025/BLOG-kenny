        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Modifier l'article
                </h1>
                <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
