{{ form_start(form, {'attr': {'class': 'form-container'}}) }}
    <h2 class="form-title">{{ title|default('Article') }}</h2>

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.content) }}
    </div>

    <div class="form-group">
        {{ form_label(form.categories) }}
        {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.categories) }}
    </div>

    <div class="form-actions mt-4">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">Annuler</a>
    </div>
{{ form_end(form) }}