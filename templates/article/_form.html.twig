{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                {{ form_label(form.title, 'Titre de l\'article', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.title, {'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': 'Entrez le titre de l\'article'
                }}) }}
                {% if form_errors(form.title) %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.title) }}
                    </div>
                {% endif %}
            </div>

            <div class="mb-3">
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.content, {'attr': {
                    'class': 'form-control',
                    'rows': '10',
                    'placeholder': 'Rédigez votre article ici'
                }}) }}
                {% if form_errors(form.content) %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(form.content) }}
                    </div>
                {% endif %}
            </div>

            <div class="mb-4">
                {{ form_label(form.categories, 'Catégories', {'label_attr': {'class': 'form-label fw-bold mb-3'}}) }}
                <div class="categories-section">
                    {{ form_widget(form.categories, {'attr': {'class': 'categories-checkboxes'}}) }}
                    {% if form_errors(form.categories) %}
                        <div class="invalid-feedback d-block mt-2">
                            {{ form_errors(form.categories) }}
                        </div>
                    {% endif %}
                    <small class="text-muted d-block mt-2">
                        <i class="fas fa-info-circle me-1"></i>
                        Sélectionnez une ou plusieurs catégories pour votre article
                    </small>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>
                    Annuler
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>
                    {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}