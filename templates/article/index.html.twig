{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Liste des articles</h1>
        <a href="{{ path('app_article_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nouvel article
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for article in articles %}
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text text-muted">
                            <small><i class="far fa-clock me-1"></i>{{ article.createdAt|date('d/m/Y H:i') }}</small>
                        </p>
                        <p class="card-text">{{ article.content|slice(0, 150) }}...</p>
                        <div class="mb-3">
                            {% for category in article.categories %}
                                <span class="badge bg-secondary me-1">{{ category.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="btn-group w-100">
                            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-outline-warning" data-bs-toggle="tooltip" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                <button class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Aucun article trouvé
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}