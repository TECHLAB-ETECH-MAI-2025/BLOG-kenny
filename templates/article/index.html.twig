{% extends 'base.html.twig' %}

{% block title %}Gestion des Articles{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">
                    <i class="fas fa-newspaper me-2"></i>
                    Gestion des Articles
                </h1>
                <a href="{{ path('app_article_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-1"></i>
                    Nouvel article
                </a>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        {% if articles|length > 0 %}
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Catégorie</th>
                                    <th>Date de création</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <td>{{ article.id }}</td>
                                        <td>{{ article.title }}</td>
                                        <td>
                                            {% if article.categories|length > 0 %}
                                                {% for category in article.categories %}
                                                    <span class="badge bg-secondary me-1">{{ category.name }}</span>
                                                {% endfor %}
                                            {% else %}
                                                <span class="text-muted">Non catégorisé</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ article.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_article_show', {'id': article.id}) }}"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i> Voir
                                                </a>
                                                <a href="{{ path('app_article_edit', {'id': article.id}) }}"
                                                   class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit me-1"></i> Modifier
                                                </a>
                                                <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}"
                                                      style="display: inline-block;"
                                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash me-1"></i> Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Aucun article n'a été créé pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %}