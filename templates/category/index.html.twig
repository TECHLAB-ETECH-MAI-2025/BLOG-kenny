{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatable') }}
{% endblock %}

{% block body %}
    <div class="page-header bg-light py-4 mb-4">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">
                    <i class="fas fa-tags me-2"></i>
                    Liste des catégories
                </h1>
                <a href="{{ path('app_category_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Nouvelle catégorie
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Barre de recherche -->
        <div class="search-container mb-4">
            <input type="text" 
                   class="form-control" 
                   id="datatable-search"
                   placeholder="Rechercher une catégorie...">
        </div>

        <!-- Table -->
        <div class="card">
            <div class="card-body">
                <table id="categories-table" class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Articles</th>
                            <th>Dernière mise à jour</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
