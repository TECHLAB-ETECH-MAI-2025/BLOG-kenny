{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">
                    <i class="fas fa-tags me-2"></i>
                    Gestion des Catégories
                </h1>
                <a href="{{ path('app_category_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-1"></i>
                    Nouvelle catégorie
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for category in categories %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <p class="card-text text-muted">
                                <small>ID: {{ category.id }}</small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <div class="btn-group d-flex w-100" role="group">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}"
                                   class="btn btn-outline-primary flex-fill">
                                    <i class="fas fa-eye me-1"></i> Voir
                                </a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}"
                                   class="btn btn-outline-warning flex-fill">
                                    <i class="fas fa-edit me-1"></i> Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Aucune catégorie n'a été créée pour le moment.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
