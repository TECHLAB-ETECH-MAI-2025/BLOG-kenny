{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">
                    <i class="fas fa-tag me-2"></i>
                    {{ category.name }}
                </h1>
                <div class="btn-group">
                    <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Retour
                    </a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>
                        Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-4">
                            <h3 class="card-title h5 mb-3">Informations de la catégorie</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong class="text-muted">ID:</strong>
                                    </p>
                                    <p class="h5">{{ category.id }}</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong class="text-muted">Nom:</strong>
                                    </p>
                                    <p class="h5">{{ category.name }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="border-top pt-3">
                            <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-1"></i>
                                    Supprimer cette catégorie
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
