{% extends 'base.html.twig' %}

{% block title %}Liste des Commentaires{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatable') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Commentaires</h1>

        <div class="mb-4">
            <a href="{{ path('app_comment_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau commentaire
            </a>
        </div>

        <!-- Barre de recherche -->
        <div class="search-container mb-4">
            <input type="text" 
                   class="form-control" 
                   id="datatable-search"
                   placeholder="Rechercher un commentaire...">
        </div>

        <!-- Table -->
        <div class="card">
            <div class="card-body">
                <table id="comments-table" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Contenu</th>
                    <th>Article</th>
                    <th>Auteur</th>
                    <th>Date de cr√©ation</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}