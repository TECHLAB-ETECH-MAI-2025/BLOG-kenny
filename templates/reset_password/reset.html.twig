{% extends 'auth_base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<div class="auth-wrapper">
    <div class="container">
        <div class="auth-logo text-center mb-4">
            <h1 class="text-white display-4 mb-0">Blog Kenny</h1>
        </div>
        <div class="card registration-card fade-in mx-auto">
            <div class="card-body">
                <div class="text-center mb-4">
                    <h1 class="h2 fw-bold text-primary">Nouveau mot de passe</h1>
                    <p class="text-muted">Veuillez entrer votre nouveau mot de passe</p>
                </div>

                {{ form_start(resetForm, {'attr': {'class': 'registration-form'}}) }}
                    <div class="mb-4">
                        {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe') }}
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            {{ form_widget(resetForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Entrez votre nouveau mot de passe'
                                }
                            }) }}
                        </div>
                        {{ form_errors(resetForm.plainPassword) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="fas fa-key me-2"></i>
                            RÃ©initialiser le mot de passe
                        </button>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
